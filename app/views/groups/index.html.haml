.side-content
  .side-header
    %p.side-header__user-name
      = current_user.name
    .side-header__icons
      = link_to new_group_path, class: "iconcolor" do
        = fa_icon 'pencil-square-o'
      = link_to edit_user_path(current_user), class: "iconcolor" do
        = fa_icon 'cog'

  .side-groups
    - @groups.each do |group|
      .side-group
        .side-group__name
          = group.name
        .side-group__message
          = group.created_at

.main-content
  .main-header
    .left
      .left__selected-group
        = @selected_group
      .left__members
        Members : karimen
    .right
      = link_to edit_group_path(@selected_group.id), class: "edit" do
        = "Edit"
  .main-body
    .main-posts
      - @messages.each do |message|
      .message
        .message-header
          .message-header__name
            = message.user.name
          .message-header__time
            = message.created_at
        .message__content
          = message.content

  .form
    %form
      %input.form.box
      .box__mask
        %label.box__mask__image
          = fa_icon 'picture-o', class: 'icon'
          %input.box__mask__hidden{type: 'file'}
      %input.form.submit{type: 'submit', value: 'Send'}
